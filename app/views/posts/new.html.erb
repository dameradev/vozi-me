<%= form_with(model: @post, local: true) do |form| %>

<div class="col-sm-9 post-form">
  <div class="form-group row">
    <%= form.label :origin, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.text_field :origin, class: "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :destination, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.text_field :destination, class: "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :date, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.date_field :date, class: "form-control col-sm-6" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :passengers, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.text_field :passengers, class: "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :time, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.time_field :time, class: "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :cost, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.text_field :cost, class: "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :vechile, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.text_field :vechile, class: "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :phone, class: "col-sm-3 col-form-label text-right font-weight-bold" %>
    <div class="col-sm-9">
      <%= form.text_field :phone, class: "form-control col-sm-4" %>
    </div>
  </div>
</div>

  <div class="col-md-12">
    <div class="form-group">
      <%= form.submit "Post Item", class: 'btn btn-primary btn-block ' %>
    </div>
  </div>


<% end %>
