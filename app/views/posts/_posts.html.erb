
  <table class="table post-items table-striped header-fixed" id="example">
    <thead class="">
      <tr>
        <th scope="col">Origin</th>
        <th scope="col">Destination</th>
        <th scope="col">Date</th>
        <th scope="col">Time</th>
        <th scope="col">Cena</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>

            <tr>
              <td scope="row"><%= link_to '', post %><%= post.origin %></td>
              <td scope="row"><%= post.destination %></td>
              <td scope="row"><%= post.date.strftime("%D")%>,<br> <%= post.date.strftime("%A")  %></td>
              <td scope="row"><%= post.time.strftime("%H:%M")  %></td>
              <td scope="row"><%= post.cost %></td>
            </tr>

      <% end %>
    </tbody>

  </table>
